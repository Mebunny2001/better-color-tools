{
  "name": "better-color-tools",
  "description": "Better color manipulation for Sass and JavaScript / TypeScript.",
  "version": "0.5.0",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drwpow/better-color-tools"
  },
  "keywords": [
    "sass",
    "scss",
    "css",
    "color",
    "colour",
    "typescript"
  ],
  "homepage": "https://github.com/drwpow/better-color-tools",
  "license": "MIT",
  "type": "module",
  "style": "./index.scss",
  "sass": "./index.scss",
  "main": "./dist/index.min.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc && npm run bundle && cp dist/index.min.js www/src/lib/better.min.js",
    "bundle": "esbuild dist/index.js --bundle --minify --outfile=dist/index.min.js --format=esm",
    "changeset": "changeset",
    "dev": "tsc -w",
    "lint": "eslint \"**/*.{js,ts}\"",
    "prepublishOnly": "npm run build",
    "test": "mocha --parallel",
    "test:benchmark": "mocha"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.0",
    "@types/node": "^16.11.25",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "chai": "^4.3.6",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "sass": "^1.49.8",
    "typescript": "^4.5.5"
  }
}
