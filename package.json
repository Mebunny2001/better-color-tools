{
  "name": "better-color-tools",
  "description": "Fast, minimal color conversion and tools for JS/Sass. Supports sRGB, Oklab, Oklch, Display P3, and more.",
  "version": "0.10.0",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drwpow/better-color-tools"
  },
  "keywords": [
    "sass",
    "scss",
    "css",
    "color",
    "colour",
    "typescript"
  ],
  "homepage": "https://github.com/drwpow/better-color-tools",
  "license": "MIT",
  "type": "module",
  "style": "./index.scss",
  "sass": "./index.scss",
  "main": "./dist/index.min.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "del dist && tsc && npm run bundle && cp dist/index.min.js www/src/lib/better.min.js",
    "bundle": "esbuild dist/index.js --bundle --minify --outfile=dist/index.min.js --format=esm",
    "changeset": "changeset",
    "dev": "tsc -w",
    "lint": "eslint \"**/*.{js,ts}\"",
    "prepublish": "npm run build",
    "test": "vitest run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@types/node": "^18.11.14",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.54",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.18.2",
    "prettier": "^2.8.1",
    "sass": "^1.56.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vitest": "^0.25.8"
  }
}
